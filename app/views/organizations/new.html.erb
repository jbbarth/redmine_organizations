<h2><%= link_to t(:label_organization_plural), organizations_path %> &#187; <%= t(:label_organization_new) %></h2>

<%= labelled_form_for :organization, @organization, :url => {:controller => 'organizations', :action => 'create'}, :html => {:class => nil} do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p>
    <%= submit_tag t(:button_create) %>
    <%= link_to_function t(:button_cancel), "history.back()" %>
  </p>
<% end -%>

