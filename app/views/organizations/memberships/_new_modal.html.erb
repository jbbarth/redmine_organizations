<h3 class="title"><%= t(:label_new_members_through_organization) %></h3>

<%= form_for @member, :as => :membership, :url => project_memberships_path(@project), :remote => true, :method => :post do |f| %>
  <%= f.hidden_field :project_id, value: @project.id %>
  <%= render :partial => 'new_form' %>
  <p class="buttons">
    <%= submit_tag t(:button_add), :id => 'member-add-submit' %>
    <%= submit_tag t(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
<% end %>
